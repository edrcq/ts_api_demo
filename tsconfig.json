{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6",
          "ES2022"
       ],
       "target": "ES2022",
       "module": "commonjs",
       "declaration": true,
       "moduleResolution": "node",
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "noImplicitAny": true,
       "esModuleInterop": true
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./build",
        "./src/**/*.spec.ts"
    ]
}
